<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <CheckBox
        android:id="@+id/on_touch_event_touch_type_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/touch_type" />
    <Spinner
        android:id="@+id/on_touch_event_touch_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/on_touch_event_create_touch_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_touch_event" />
    <ListView
        android:id="@+id/touch_event_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>