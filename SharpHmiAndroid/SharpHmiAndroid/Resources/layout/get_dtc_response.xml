<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <CheckBox
        android:id="@+id/dtc_ecu_header_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ecu_header" />
    <EditText
        android:id="@+id/dtc_ecu_header_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />
    <CheckBox
        android:id="@+id/dtc_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dtc" />
    <EditText
        android:id="@+id/dtc_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/ts_hint"
        android:textSize="12sp" />
    <CheckBox
        android:id="@+id/dtc_result_code_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result_code" />
    <Spinner
        android:id="@+id/dtc_result_code_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>