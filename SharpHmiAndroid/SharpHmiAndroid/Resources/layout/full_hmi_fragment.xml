<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/show_media_track_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="@string/_12_34_00" />
                <TextView
                    android:id="@+id/show_main_field_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="@string/show_line_1" />
                <TextView
                    android:id="@+id/show_main_field_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="@string/show_line_2" />
                <TextView
                    android:id="@+id/show_main_field_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="@string/show_line_3" />
                <TextView
                    android:id="@+id/show_main_field_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="@string/show_line_4" />
                <TextView
                    android:id="@+id/show_media_track__timer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="@string/media_track" />
            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/full_hmi_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
        <ImageView
            android:id="@+id/show_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/show_image_icon" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/full_hmi_set_media_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            tools:text="00:00" />
        <SeekBar
            android:id="@+id/full_hmi_set_media_seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/full_hmi_set_media_end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            tools:text="00:00" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/button_hmi_previous"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="@string/previous_button"
            app:srcCompat="@drawable/ic_skip_previous_black_24dp" />
        <ImageView
            android:id="@+id/button_hmi_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/play_pause_button"
            app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />
        <ImageView
            android:id="@+id/button_hmi_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="@string/next_button"
            app:srcCompat="@drawable/ic_skip_next_black_24dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/soft_btn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
            <Button
                android:id="@+id/soft_btn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
            <Button
                android:id="@+id/soft_btn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
            <Button
                android:id="@+id/soft_btn_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/soft_btn_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
            <Button
                android:id="@+id/soft_btn_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
            <Button
                android:id="@+id/soft_btn_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
            <Button
                android:id="@+id/soft_btn_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>